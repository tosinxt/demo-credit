{
  "name": "demo-credit",
  "version": "1.0.0",
  "description": "A demo credit app built with Node.js and TypeScript",
  "main": "dist/index.js",
  "scripts": {
    "test": "node node_modules/.bin/jest",
    "test:watch": "node node_modules/.bin/jest --watch",
    "test:coverage": "node node_modules/.bin/jest --coverage",
    "test:ci": "node node_modules/.bin/jest --ci --coverage",
    "build": "rm -rf dist && tsc --skipLibCheck",
    "start": "node dist/index.js",
    "dev": "cross-env NODE_ENV=production tsx watch src/index.ts",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "render-build": "npm install && npm run dev",
    "build:prod": "npm run dev",
    "postinstall": "npm run dev",
    "heroku-postbuild": "npm run dev"
  },
  "keywords": [
    "demo",
    "credit",
    "typescript",
    "node"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "ISC",
  "devDependencies": {
    "@types/axios": "^0.14.4",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.1.0",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^7.8.0",
    "@typescript-eslint/parser": "^7.8.0",
    "cross-env": "^10.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^10.0.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^30.0.5",
    "prettier": "^3.2.5",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.3",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@types/bcryptjs": "^3.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/knex": "^0.16.1",
    "@types/module-alias": "^2.0.4",
    "axios": "^1.11.0",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "express-validator": "^7.2.1",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.1.0",
    "module-alias": "^2.2.3",
    "mysql2": "^3.14.3"
  }
}
